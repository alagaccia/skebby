{
    "name": "alagaccia/skebby",
    "description": "Skebby API",
    "type": "library",
    "license": "NLPL",
    "authors": [
        {
            "name": "Andrea Lagaccia",
            "email": "a.lagaccia@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "alagaccia\\skebby\\": "src"
        }
    },
    "require": {
        "laravel/framework": "^9.0|^10.0|^11.0|^12.0",
        "php": "^8.2|^8.3|^8.4",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/http": "^8.0|^9.0|^10.0|^11.0"
    },

    "extra": {
        "laravel": {
            "providers": [
                "alagaccia\\skebby\\SkebbyServiceProvider"
            ],
            "aliases": {
                "Skebby": "alagaccia\\skebby\\SkebbyFacade"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo '\\n\\033[32mSkebby SMS Package installed successfully!\\033[0m\\n';\"",
            "@php -r \"echo '\\033[33mTo publish the configuration file, run:\\033[0m\\n';\"",
            "@php -r \"echo '\\033[36mphp artisan vendor:publish --tag=skebby-config\\033[0m\\n\\n';\""
        ],
        "post-update-cmd": [
            "@php -r \"echo '\\n\\033[32mSkebby SMS Package updated successfully!\\033[0m\\n';\"",
            "@php -r \"echo '\\033[33mTo publish the configuration file, run:\\033[0m\\n';\"",
            "@php -r \"echo '\\033[36mphp artisan vendor:publish --tag=skebby-config\\033[0m\\n\\n';\""
        ]
    }
}
